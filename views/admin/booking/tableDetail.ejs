<div class="card-body">
  <div class="table-responsive">
    <table
      class="table table-bordered"
      width="100%"
      cellspacing="0"
    >
      <thead>
        <tr>
          <th>Title</th>
          <th>Name</th>
          <th>Total</th>
          <th>Status</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= booking.item.title %> </td>
          <td><%= booking.payments.transferFrom %> </td>
          <td>$ <%= booking.total %> </td>
          <td><%= booking.payments.status %> </td>
          <td class="text-center">
            <form action="/admin/booking/<%= booking._id %>/confirmation" class="d-inline" method="POST">
              <button type="submit" class="btn btn-success btn-sm">Aprove</button>
            </form>
            <form action="/admin/booking/<%= booking._id %>/reject" class="d-inline" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
