<script>
  $('#dataTable').on('click', '.btn-edit', function() {
    let id = $(this).data('id');
    let name = $(this).data('name');
    console.log(id, name);
    $('#editModal').modal('show')
    $('.id').val(id);
    $('.name').val(name);
  })
</script>

<script>
  $('#dataTable').on('click', '.btn-delete', function() {
